# AWS Configuration - Optimized for 20 users
aws_region  = "ap-southeast-2"  # Sydney
environment = "prod"

# VPC Configuration
vpc_cidr             = "10.0.0.0/16"
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.10.0/24", "10.0.20.0/24"]

# EC2 Configuration - Optimized for 20 users
instance_type         = "t3.medium"  # 2 vCPU, 4GB RAM
key_name              = ""           # Optional: SSH key pair name
jira_data_volume_size = 20           # 20GB should be enough for small team

# RDS Configuration - Optimized for 20 users
db_instance_class        = "db.t3.micro"  # 2 vCPU, 1GB RAM - sufficient for 20 users
db_name                  = "jiradb"
db_username              = "jiraadmin"
db_password              = "CHANGE_ME_TO_SECURE_PASSWORD"  # Use a strong password!
db_allocated_storage     = 20
db_max_allocated_storage = 50

# Jira Configuration
jira_version = "9.12.0"
jira_memory  = "1536m"  # 1.5GB for small team

# GitHub Repository (for downloading agent JAR)
github_repo   = "your-username/jira-crack"  # Update with your repo
github_branch = "master"

# Domain and SSL (optional but recommended)
# SSL will be automatically provisioned via ACM when both domain_name and route53_zone_id are set
domain_name               = ""    # e.g., "jira.yourcompany.com"
route53_zone_id           = ""    # e.g., "Z1234567890ABC" - Your Route 53 hosted zone ID
subject_alternative_names = []    # e.g., ["www.jira.yourcompany.com"]

# Access Control - IMPORTANT: Restrict for security!
allowed_cidr_blocks     = ["0.0.0.0/0"]  # Consider restricting to Vietnam IPs or VPN
ssh_allowed_cidr_blocks = []              # Add your office IP for SSH access
